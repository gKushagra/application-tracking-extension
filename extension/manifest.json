{
    "manifest_version": 3,
    "name": "Job Helper",
    "version": "1.0.0",
    "description": "Manage your job applications.",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },
    "action": {
        "default_icon": "icons/icon128.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}