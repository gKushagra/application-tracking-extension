{
    "manifest_version": 2,
    "name": "Job Helper",
    "version": "1.0.0",
    "description": "Manage your job applications.",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },
    "browser_action": {
        "default_icon": "icons/icon16.png",
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}